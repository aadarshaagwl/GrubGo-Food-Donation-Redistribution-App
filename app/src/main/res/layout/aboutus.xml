<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:clipToPadding="false">

        <!-- Title -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="About Us"
            android:textColor="#5D4037"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvAboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="GrubGo, developed with Kotlin on Android Studio and powered by Firebase, revolutionizes food donation by simplifying the process for donors and receivers. By enabling surplus food sharing, GrubGo reduces waste, aids those in need, and fosters a sustainable community that values compassion, environmental responsibility, and active support for the underprivileged."
            android:textColor="#5D4037"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textStyle="bold"
            android:textAlignment="gravity"
            />

        <!-- Social Media Links Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Follow Us On:"
            android:textColor="#5D4037"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Social Media Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/facebook"
                android:contentDescription="Facebook"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/btnInstagram"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/instagram"
                android:contentDescription="Instagram"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/btnTwitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/twitter"
                android:contentDescription="Twitter"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!-- Created By Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Created By:"
            android:textColor="#5D4037"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bulbasaur"
                    android:backgroundTint="#FFCCBC"
                    android:contentDescription="Creator 1"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Prerna Meda Krishna"
                    android:textColor="#5D4037"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pikachu"
                    android:backgroundTint="#FFCCBC"
                    android:contentDescription="Creator 2"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Nithya Lakshmi V"
                    android:textColor="#5D4037"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/charmander"
                    android:backgroundTint="#FFCCBC"
                    android:contentDescription="Creator 2"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Rani Aishwarya"
                    android:textColor="#5D4037"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/squirtle"
                    android:backgroundTint="#FFCCBC"
                    android:contentDescription="Creator 3"
                    android:elevation="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Shraddha Purbey"
                    android:textColor="#5D4037"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Feedback Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Feedback Form:"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#B3FFCCBC"
                android:padding="8dp"
                android:scrollbars="vertical">

                <EditText
                    android:id="@+id/etFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="Enter your feedback here..."
                    android:textColorHint="#A0000000"
                    android:padding="12dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:scrollHorizontally="false"
                    android:overScrollMode="always"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:scrollbars="vertical" />
            </ScrollView>

            <Button
                android:id="@+id/btnSubmitFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#6EFFAB91"
                android:text="Submit Feedback"
                android:textColor="#5D4037"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
